# Quick navigation
alias ..="cd .."
alias ...="cd ../.."
alias home='cd ~'

# List files with details
alias ll="ls -lah"

# Safer remove
alias rm="rm -i"

# Update and upgrade system (for Debian-based systems)
alias update="sudo apt update && sudo apt upgrade -y"

alias da='date "+%Y-%m-%d %A %T %Z"'
